<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">


    <ImageButton
        android:id="@+id/imageBack"
        android:layout_width="80dp"
        android:layout_height="68dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toStartOf="@+id/imagePlay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="229dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imagePlay"
        android:layout_width="80dp"
        android:layout_height="68dp"
        app:layout_constraintEnd_toStartOf="@+id/imageNext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageBack"
        app:srcCompat="@drawable/play"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="229dp" />

    <ImageButton
        android:id="@+id/imageNext"
        android:layout_width="80dp"
        android:layout_height="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imagePlay"
        app:srcCompat="@drawable/next"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="229dp" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/BarSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagePlay"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/txtCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="00:00"
        app:layout_constraintBottom_toTopOf="@+id/BarSeek"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="00:00"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="376dp" />

</android.support.constraint.ConstraintLayout>
